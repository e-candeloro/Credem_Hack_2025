# Application Settings
APP_NAME="AI HR System"
VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# LLM Configuration
LLM_VENDOR=groq  # Options: groq, google, ollama
LLM_MODEL=mixtral-8x7b-32768  # Model name depends on vendor
LLM_API_KEY=your_groq_api_key_here  # Required for Groq
GOOGLE_API_KEY=your_google_api_key_here  # Required for Google
OLLAMA_BASE_URL=http://localhost:11434  # Required for Ollama
VISION_LLM_API_KEY=secret-key-change-in-production
# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (for future use)
DATABASE_URL=sqlite:///./test.db

# External APIs (for future use)
# OPENAI_API_KEY=your-openai-api-key

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000,http://backend:8000

# Logging
LOG_LEVEL=INFO

# Frontend Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
API_BASE_URL=http://backend:8000

# Docker/Production overrides
# For production, set these:
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=your-production-secret-key
# API_BASE_URL=https://your-api-domain.com
# ALLOWED_ORIGINS=https://your-frontend-domain.com

# AI/ML API Keys
c
